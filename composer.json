{
  "scripts": {
    "spec": "kahlan",
    "coverage":"XDEBUG_MODE=coverage kahlan --lcov=coverage/lcov.info",
    "analyse":[
      "phpmd src/ spec/ ansi cleancode,codesize,controversial,design,naming,unusedcode",
      "phpstan analyse -c specs.neon",
      "phpstan analyse -c src.neon"
    ]
  },
  "autoload": {
    "psr-4": {
      "InspireFuel\\": "src/InspireFuel"
    },
    "files": [
      "src/utils/contracts.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "InspireFuel\\": "spec/InspireFuel"
    }
  },
  "require-dev": {
    "kahlan/kahlan": "^5.2",
    "phpunit/phpunit": "^11.3",
    "phpstan/phpstan": "^1.11",
    "phan/phan": "5.x",
    "phpmd/phpmd": "^2.15"
  }
}
